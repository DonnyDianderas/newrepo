<main>
  <h1>Delete Inventory Item</h1>
  <p>Confirm Deletion - This action is <strong>permanent</strong>.</p>

  <!-- Flash messages -->
  <%- messages() %>

  <form id="deleteInventoryForm" action="/inv/delete" method="POST">

    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make"
           value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>" readonly>

    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model"
           value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>" readonly>

    <label for="inv_year">Year:</label>
    <input type="number" id="inv_year" name="inv_year"
           value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>" readonly>

    <label for="inv_price">Price:</label>
    <input type="number" step="0.01" id="inv_price" name="inv_price"
           value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>" readonly>

    <!-- Hidden field for inv_id -->
    <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">

    <button type="submit">Delete Vehicle</button>
  </form>
</main>



